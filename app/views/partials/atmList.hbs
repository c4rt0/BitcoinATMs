<section class="ui raised segment">
  <div class="ui grid">
    <aside class="six wide column">
      <img src="images/btc_atm_2.png" class="ui big image">
    </aside>
    <article class="ten wide column">
      <table class="ui celled table segment">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Candidate</th>
            <th>Edit</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          {{#each additions}}
            <tr>
              <td> {{name}} </td>
              <td> {{category}} </td>
              <td> {{description}} </td>
              <td> {{poi.lastName}}, {{poi.firstName}} </td>
              <td> <button class="ui blue submit button">Edit</button> </td>
              <td> <button class="ui red submit button">Delete</button> </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </article>
  </div>
</section>
